<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#2aa6e4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_song"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music_template">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tw_song_name"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="Song_Name">

            </TextView>

            <TextView
                android:id="@+id/tw_song_writer"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="Song_Writer">

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/heart_not_filled">

        </ImageView>

        <ImageView
            android:id="@+id/btn_playlist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/playlist_add">

        </ImageView>

        <ImageView
            android:id="@+id/btnRemoveSong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/delete"
            android:visibility="gone">

        </ImageView>


    </LinearLayout>

</RelativeLayout>